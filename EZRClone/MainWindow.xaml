<Window x:Class="EZRClone.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:vm="clr-namespace:EZRClone.ViewModels"
        mc:Ignorable="d"
        d:DataContext="{d:DesignInstance vm:MainWindowViewModel}"
        Title="EZRClone" Height="650" Width="1000"
        WindowStartupLocation="CenterScreen"
        Background="{DynamicResource BackgroundBrush}">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="60" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <!-- Navigation Sidebar -->
        <Border Grid.Column="0" Background="{DynamicResource SurfaceBrush}">
            <DockPanel>
                <TextBlock DockPanel.Dock="Bottom" Text="{Binding VersionText}"
                           FontSize="9" Foreground="{DynamicResource ForegroundSecondaryBrush}"
                           HorizontalAlignment="Center" Margin="0,0,0,8"/>
                <StackPanel VerticalAlignment="Top">
                    <RadioButton Style="{DynamicResource NavButtonStyle}"
                                 Content="&#xE8B7;"
                                 Tag="Config"
                                 IsChecked="True"
                                 Command="{Binding NavigateCommand}"
                                 CommandParameter="Config" />
                    <RadioButton Style="{DynamicResource NavButtonStyle}"
                                 Content="&#xE713;"
                                 Tag="Settings"
                                 Command="{Binding NavigateCommand}"
                                 CommandParameter="Settings" />
                    <RadioButton Style="{DynamicResource NavButtonStyle}"
                                 Content="&#xE895;"
                                 Tag="Jobs"
                                 Command="{Binding NavigateCommand}"
                                 CommandParameter="Jobs" />
                    <RadioButton Style="{DynamicResource NavButtonStyle}"
                                 Content="&#xED25;"
                                 Tag="Browse"
                                 Command="{Binding NavigateCommand}"
                                 CommandParameter="Browse" />
                    <RadioButton Style="{DynamicResource NavButtonStyle}"
                                 Content="&#xE9D5;"
                                 Tag="Log"
                                 Command="{Binding NavigateCommand}"
                                 CommandParameter="Log" />
                </StackPanel>
            </DockPanel>
        </Border>

        <!-- Content Area -->
        <ContentControl Grid.Column="1" Content="{Binding CurrentView}" Margin="0" />
    </Grid>
</Window>
