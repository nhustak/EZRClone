<UserControl x:Class="EZRClone.Views.JobsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="clr-namespace:EZRClone.ViewModels"
             xmlns:models="clr-namespace:EZRClone.Models"
             xmlns:converters="clr-namespace:EZRClone.Converters"
             mc:Ignorable="d"
             d:DataContext="{d:DesignInstance vm:JobsViewModel}"
             Background="{DynamicResource BackgroundBrush}">
    <UserControl.Resources>
        <converters:InverseBoolToVisConverter x:Key="InverseBoolToVis"/>
    </UserControl.Resources>
    
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Grid Grid.Row="0" Margin="0,0,0,20">
            <TextBlock Text="Jobs" FontSize="22" FontWeight="SemiBold"
                       Foreground="{DynamicResource ForegroundBrush}"
                       VerticalAlignment="Center"/>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                <Button Content="+ New Job" Style="{StaticResource AccentButton}"
                        Command="{Binding AddJobCommand}"
                        Padding="12,6" Margin="0,0,10,0"
                        Visibility="{Binding IsEditing, Converter={StaticResource InverseBoolToVis}}"/>
                <Button Content="ðŸ”„ Refresh" Command="{Binding LoadJobsCommand}"
                        Padding="12,6"
                        Visibility="{Binding IsEditing, Converter={StaticResource InverseBoolToVis}}"/>
            </StackPanel>
        </Grid>

        <!-- Main Content -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="300"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Job List -->
            <Border Grid.Column="0" BorderBrush="{DynamicResource BorderBrush}" 
                    BorderThickness="1" Margin="0,0,10,0"
                    Background="{DynamicResource BackgroundSecondaryBrush}">
                <Grid>
                    <ListBox ItemsSource="{Binding Jobs}"
                             SelectedItem="{Binding SelectedJob}"
                             Background="Transparent"
                             BorderThickness="0"
                             IsEnabled="{Binding IsEditing, Converter={StaticResource InverseBoolToVis}}">
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <Grid Margin="5">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    <StackPanel Grid.Column="0">
                                        <TextBlock Text="{Binding Name}" FontWeight="SemiBold"
                                                   Foreground="{DynamicResource ForegroundBrush}"/>
                                        <TextBlock FontSize="11"
                                                   Foreground="{DynamicResource ForegroundSecondaryBrush}">
                                            <Run Text="{Binding Operation, Mode=OneWay}"/>
                                            <Run Text="â€¢"/>
                                            <Run Text="{Binding SourcePath, Mode=OneWay}"/>
                                            <Run Text="â†’"/>
                                            <Run Text="{Binding DestinationPath, Mode=OneWay}"/>
                                        </TextBlock>
                                    </StackPanel>
                                    <TextBlock Grid.Column="1" VerticalAlignment="Center" FontSize="16">
                                        <TextBlock.Style>
                                            <Style TargetType="TextBlock">
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding LastStatus}" Value="Success">
                                                        <Setter Property="Text" Value="âœ“"/>
                                                        <Setter Property="Foreground" Value="#4CAF50"/>
                                                    </DataTrigger>
                                                    <DataTrigger Binding="{Binding LastStatus}" Value="Failed">
                                                        <Setter Property="Text" Value="âœ—"/>
                                                        <Setter Property="Foreground" Value="#F44336"/>
                                                    </DataTrigger>
                                                    <DataTrigger Binding="{Binding LastStatus}" Value="Running">
                                                        <Setter Property="Text" Value="âŸ³"/>
                                                        <Setter Property="Foreground" Value="#2196F3"/>
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </TextBlock.Style>
                                    </TextBlock>
                                </Grid>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>
                    
                    <!-- Empty state -->
                    <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                        <StackPanel.Style>
                            <Style TargetType="StackPanel">
                                <Setter Property="Visibility" Value="Collapsed"/>
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding HasJobs}" Value="False">
                                        <Setter Property="Visibility" Value="Visible"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </StackPanel.Style>
                        <TextBlock Text="No jobs yet" FontSize="14"
                                   Foreground="{DynamicResource ForegroundSecondaryBrush}"
                                   HorizontalAlignment="Center"/>
                        <TextBlock Text="Click '+ New Job' to create one" FontSize="12"
                                   Foreground="{DynamicResource ForegroundSecondaryBrush}"
                                   HorizontalAlignment="Center" Margin="0,5,0,0"/>
                    </StackPanel>
                </Grid>
            </Border>

            <!-- Detail/Edit Panel -->
            <Border Grid.Column="1" BorderBrush="{DynamicResource BorderBrush}"
                    BorderThickness="1" Padding="20"
                    Background="{DynamicResource BackgroundSecondaryBrush}">
                <Grid>
                    <!-- View Mode -->
                    <ScrollViewer VerticalScrollBarVisibility="Auto"
                                  Visibility="{Binding IsEditing, Converter={StaticResource InverseBoolToVis}}">
                    <StackPanel>
                        <!-- No selection -->
                        <TextBlock Text="Select a job to view details"
                                   FontSize="14"
                                   Foreground="{DynamicResource ForegroundSecondaryBrush}"
                                   HorizontalAlignment="Center"
                                   VerticalAlignment="Center"
                                   Margin="0,50,0,0">
                            <TextBlock.Style>
                                <Style TargetType="TextBlock">
                                    <Setter Property="Visibility" Value="Collapsed"/>
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding SelectedJob}" Value="{x:Null}">
                                            <Setter Property="Visibility" Value="Visible"/>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </TextBlock.Style>
                        </TextBlock>

                        <!-- Job details -->
                        <StackPanel DataContext="{Binding SelectedJob}">
                            <StackPanel.Style>
                                <Style TargetType="StackPanel">
                                    <Setter Property="Visibility" Value="Visible"/>
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding}" Value="{x:Null}">
                                            <Setter Property="Visibility" Value="Collapsed"/>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </StackPanel.Style>

                            <TextBlock Text="{Binding Name}" FontSize="20" FontWeight="SemiBold"
                                       Foreground="{DynamicResource ForegroundBrush}" Margin="0,0,0,20"/>

                            <TextBlock Text="Operation" FontSize="12" FontWeight="SemiBold"
                                       Foreground="{DynamicResource ForegroundSecondaryBrush}"/>
                            <TextBlock Text="{Binding Operation}" FontSize="14" Margin="0,2,0,15"
                                       Foreground="{DynamicResource ForegroundBrush}"/>

                            <TextBlock Text="Source" FontSize="12" FontWeight="SemiBold"
                                       Foreground="{DynamicResource ForegroundSecondaryBrush}"/>
                            <TextBlock FontSize="14" Margin="0,2,0,15"
                                       Foreground="{DynamicResource ForegroundBrush}">
                                <Run Text="{Binding SourceRemoteName, Mode=OneWay}"/>
                                <Run Text=":"/>
                                <Run Text="{Binding SourcePath, Mode=OneWay}"/>
                            </TextBlock>

                            <TextBlock Text="Destination" FontSize="12" FontWeight="SemiBold"
                                       Foreground="{DynamicResource ForegroundSecondaryBrush}"/>
                            <TextBlock FontSize="14" Margin="0,2,0,15"
                                       Foreground="{DynamicResource ForegroundBrush}">
                                <Run Text="{Binding DestinationRemoteName, Mode=OneWay}"/>
                                <Run Text=":"/>
                                <Run Text="{Binding DestinationPath, Mode=OneWay}"/>
                            </TextBlock>

                            <TextBlock Text="Options" FontSize="12" FontWeight="SemiBold"
                                       Foreground="{DynamicResource ForegroundSecondaryBrush}"/>
                            <TextBlock FontSize="14" Margin="0,2,0,2"
                                       Foreground="{DynamicResource ForegroundBrush}">
                                <Run Text="Transfers:"/>
                                <Run Text="{Binding Transfers, Mode=OneWay}"/>
                            </TextBlock>
                            <TextBlock FontSize="14" Margin="0,0,0,2"
                                       Foreground="{DynamicResource ForegroundBrush}">
                                <Run Text="Verbosity:"/>
                                <Run Text="{Binding Verbosity, Mode=OneWay}"/>
                            </TextBlock>
                            <TextBlock FontSize="14" Margin="0,0,0,15"
                                       Foreground="{DynamicResource ForegroundBrush}">
                                <Run Text="Log File:"/>
                                <Run Text="{Binding LogFilePath, Mode=OneWay}"/>
                            </TextBlock>

                            <TextBlock Text="Last Run" FontSize="12" FontWeight="SemiBold"
                                       Foreground="{DynamicResource ForegroundSecondaryBrush}"/>
                            <TextBlock FontSize="14" Margin="0,2,0,2"
                                       Foreground="{DynamicResource ForegroundBrush}">
                                <Run Text="{Binding LastRun, Mode=OneWay, StringFormat='{}{0:g}'}"/>
                            </TextBlock>
                            <TextBlock FontSize="14" Margin="0,0,0,2"
                                       Foreground="{DynamicResource ForegroundBrush}">
                                <Run Text="Status:"/>
                                <Run Text="{Binding LastStatus, Mode=OneWay}"/>
                            </TextBlock>
                            <TextBlock Text="{Binding LastError}" FontSize="12" Margin="0,0,0,15"
                                       Foreground="#F44336" TextWrapping="Wrap"/>

                            <!-- Action buttons -->
                            <StackPanel Orientation="Horizontal" Margin="0,20,0,0">
                                <Button Content="â–¶ Run" Style="{StaticResource AccentButton}"
                                        Command="{Binding DataContext.RunJobCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                        Padding="15,8" Margin="0,0,10,0" FontWeight="SemiBold"/>
                                <Button Content="âœ Edit" Command="{Binding DataContext.EditJobCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                        Padding="15,8" Margin="0,0,10,0"/>
                                <Button Content="ðŸ—‘ Delete" Style="{StaticResource DangerButton}"
                                        Command="{Binding DataContext.DeleteJobCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                        Padding="15,8"/>
                            </StackPanel>
                        </StackPanel>
                    </StackPanel>
                </ScrollViewer>

                <!-- Edit Mode -->
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <ScrollViewer.Style>
                        <Style TargetType="ScrollViewer">
                            <Setter Property="Visibility" Value="Collapsed"/>
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding IsEditing}" Value="True">
                                    <Setter Property="Visibility" Value="Visible"/>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </ScrollViewer.Style>
                    
                    <StackPanel DataContext="{Binding EditingJob}">
                        <TextBlock Text="âœï¸ Edit Job" FontSize="20" FontWeight="SemiBold"
                                   Foreground="{DynamicResource ForegroundBrush}" Margin="0,0,0,20"/>

                        <TextBlock Text="Job Name" FontSize="12" FontWeight="SemiBold"
                                   Foreground="{DynamicResource ForegroundSecondaryBrush}"/>
                        <TextBox Text="{Binding Name, UpdateSourceTrigger=PropertyChanged}"
                                 Margin="0,2,0,15" Padding="8"/>

                        <TextBlock Text="Operation" FontSize="12" FontWeight="SemiBold"
                                   Foreground="{DynamicResource ForegroundSecondaryBrush}"/>
                        <ComboBox SelectedItem="{Binding Operation}" Margin="0,2,0,15" Padding="8">
                            <ComboBox.ItemsSource>
                                <x:Array Type="{x:Type models:RCloneOperation}">
                                    <models:RCloneOperation>Copy</models:RCloneOperation>
                                    <models:RCloneOperation>Sync</models:RCloneOperation>
                                    <models:RCloneOperation>Move</models:RCloneOperation>
                                </x:Array>
                            </ComboBox.ItemsSource>
                        </ComboBox>

                        <Separator Margin="0,10,0,20"/>

                        <!-- Source -->
                        <TextBlock Text="Source" FontSize="14" FontWeight="SemiBold"
                                   Foreground="{DynamicResource ForegroundBrush}" Margin="0,0,0,10"/>
                        
                        <CheckBox Content="Source is remote" IsChecked="{Binding SourceIsRemote}"
                                  Margin="0,0,0,10"/>
                        
                        <TextBlock Text="Remote Name" FontSize="12" FontWeight="SemiBold"
                                   Foreground="{DynamicResource ForegroundSecondaryBrush}">
                            <TextBlock.Style>
                                <Style TargetType="TextBlock">
                                    <Setter Property="Visibility" Value="Collapsed"/>
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding SourceIsRemote}" Value="True">
                                            <Setter Property="Visibility" Value="Visible"/>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </TextBlock.Style>
                        </TextBlock>
                        <ComboBox ItemsSource="{Binding DataContext.AvailableRemotes, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                  SelectedItem="{Binding SourceRemoteName}"
                                  Margin="0,2,0,10" Padding="8" IsEditable="True">
                            <ComboBox.Style>
                                <Style TargetType="ComboBox">
                                    <Setter Property="Visibility" Value="Collapsed"/>
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding SourceIsRemote}" Value="True">
                                            <Setter Property="Visibility" Value="Visible"/>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </ComboBox.Style>
                        </ComboBox>

                        <TextBlock Text="Path" FontSize="12" FontWeight="SemiBold"
                                   Foreground="{DynamicResource ForegroundSecondaryBrush}"/>
                        <Grid Margin="0,2,0,15">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <TextBox Grid.Column="0" Text="{Binding SourcePath, UpdateSourceTrigger=PropertyChanged}"
                                     Padding="8"/>
                            <Button Grid.Column="1" Content="Browse..." Padding="10,8" Margin="5,0,0,0"
                                    Click="OnBrowseSourcePath"
                                    Visibility="{Binding SourceIsRemote, Converter={StaticResource InverseBoolToVis}}"/>
                        </Grid>

                        <Separator Margin="0,10,0,20"/>

                        <!-- Destination -->
                        <TextBlock Text="Destination" FontSize="14" FontWeight="SemiBold"
                                   Foreground="{DynamicResource ForegroundBrush}" Margin="0,0,0,10"/>
                        
                        <CheckBox Content="Destination is remote" IsChecked="{Binding DestinationIsRemote}"
                                  Margin="0,0,0,10"/>
                        
                        <TextBlock Text="Remote Name" FontSize="12" FontWeight="SemiBold"
                                   Foreground="{DynamicResource ForegroundSecondaryBrush}">
                            <TextBlock.Style>
                                <Style TargetType="TextBlock">
                                    <Setter Property="Visibility" Value="Collapsed"/>
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding DestinationIsRemote}" Value="True">
                                            <Setter Property="Visibility" Value="Visible"/>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </TextBlock.Style>
                        </TextBlock>
                        <ComboBox ItemsSource="{Binding DataContext.AvailableRemotes, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                  SelectedItem="{Binding DestinationRemoteName}"
                                  Margin="0,2,0,10" Padding="8" IsEditable="True">
                            <ComboBox.Style>
                                <Style TargetType="ComboBox">
                                    <Setter Property="Visibility" Value="Collapsed"/>
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding DestinationIsRemote}" Value="True">
                                            <Setter Property="Visibility" Value="Visible"/>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </ComboBox.Style>
                        </ComboBox>

                        <TextBlock Text="Path" FontSize="12" FontWeight="SemiBold"
                                   Foreground="{DynamicResource ForegroundSecondaryBrush}"/>
                        <Grid Margin="0,2,0,15">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <TextBox Grid.Column="0" Text="{Binding DestinationPath, UpdateSourceTrigger=PropertyChanged}"
                                     Padding="8"/>
                            <Button Grid.Column="1" Content="Browse..." Padding="10,8" Margin="5,0,0,0"
                                    Click="OnBrowseDestinationPath"
                                    Visibility="{Binding DestinationIsRemote, Converter={StaticResource InverseBoolToVis}}"/>
                        </Grid>

                        <Separator Margin="0,10,0,20"/>

                        <!-- Options -->
                        <TextBlock Text="Options" FontSize="14" FontWeight="SemiBold"
                                   Foreground="{DynamicResource ForegroundBrush}" Margin="0,0,0,10"/>

                        <TextBlock Text="Concurrent Transfers" FontSize="12" FontWeight="SemiBold"
                                   Foreground="{DynamicResource ForegroundSecondaryBrush}"/>
                        <TextBox Text="{Binding Transfers, UpdateSourceTrigger=PropertyChanged}"
                                 Margin="0,2,0,15" Padding="8" MaxWidth="100" HorizontalAlignment="Left"/>

                        <TextBlock Text="Verbosity" FontSize="12" FontWeight="SemiBold"
                                   Foreground="{DynamicResource ForegroundSecondaryBrush}"/>
                        <ComboBox SelectedItem="{Binding Verbosity}" Margin="0,2,0,15" Padding="8">
                            <ComboBox.ItemsSource>
                                <x:Array Type="{x:Type models:RCloneVerbosity}">
                                    <models:RCloneVerbosity>Quiet</models:RCloneVerbosity>
                                    <models:RCloneVerbosity>Normal</models:RCloneVerbosity>
                                    <models:RCloneVerbosity>Verbose</models:RCloneVerbosity>
                                    <models:RCloneVerbosity>VeryVerbose</models:RCloneVerbosity>
                                </x:Array>
                            </ComboBox.ItemsSource>
                        </ComboBox>

                        <CheckBox Content="Create log file" IsChecked="{Binding CreateLogFile}"
                                  Margin="0,0,0,10"/>

                        <TextBlock Text="Log File Path" FontSize="12" FontWeight="SemiBold"
                                   Foreground="{DynamicResource ForegroundSecondaryBrush}">
                            <TextBlock.Style>
                                <Style TargetType="TextBlock">
                                    <Setter Property="Visibility" Value="Collapsed"/>
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding CreateLogFile}" Value="True">
                                            <Setter Property="Visibility" Value="Visible"/>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </TextBlock.Style>
                        </TextBlock>
                        <Grid Margin="0,2,0,15">
                            <Grid.Style>
                                <Style TargetType="Grid">
                                    <Setter Property="Visibility" Value="Collapsed"/>
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding CreateLogFile}" Value="True">
                                            <Setter Property="Visibility" Value="Visible"/>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </Grid.Style>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <TextBox Grid.Column="0" Text="{Binding LogFilePath, UpdateSourceTrigger=PropertyChanged}"
                                     Padding="8"/>
                            <Button Grid.Column="1" Content="Browse..." Padding="10,8" Margin="5,0,0,0"
                                    Click="OnBrowseLogFilePath"/>
                        </Grid>

                        <!-- Action buttons -->
                        <StackPanel Orientation="Horizontal" Margin="0,20,0,0">
                            <Button Content="ðŸ’¾ Save" Style="{StaticResource AccentButton}"
                                    Command="{Binding DataContext.SaveJobCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                    Padding="15,8" Margin="0,0,10,0" FontWeight="SemiBold"/>
                            <Button Content="âœ– Cancel" Command="{Binding DataContext.CancelEditCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                    Padding="15,8"/>
                        </StackPanel>
                    </StackPanel>
                </ScrollViewer>
                </Grid>
            </Border>
        </Grid>
    </Grid>
</UserControl>
